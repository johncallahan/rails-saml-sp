<!DOCTYPE html>
<html>
  <head>
    <title>Myvidrails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div>
        user: <em><%= current_user.email %></em>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      </div>
    <% end %>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
